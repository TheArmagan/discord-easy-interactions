{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "ES6",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "outDir": "lib",
    "allowJs": true,
    "esModuleInterop": true,
    "declarationDir": "lib",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": ["src/**/*.ts"]
}